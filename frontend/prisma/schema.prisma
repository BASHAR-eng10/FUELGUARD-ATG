generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  posts   Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  Int?
}

model Nozzle {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  sold      Float
  percentage Float
  status    Boolean @default(false)
}

model SystemCache {
  id         Int      @id @default(autoincrement())
  key        String   @unique
  value      String
  expires_at DateTime?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("system_cache")
}